<Window x:Class="_7analiz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_7analiz"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized">

    <StackPanel Background="Beige">

        <Menu VerticalAlignment="Top">

            <MenuItem Header="Згенерувати випадкові значення" Click="button_Click"></MenuItem>

        </Menu>

        <Grid>
            <TabControl x:Name="tabControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,22,-10.4,-21.2" >
                <TabItem Header="Ідентифікація ризиків розроблення ПЗ" Margin="-2,-11,-1.4,0">
                    <Grid Background="#FFE5E5E5">
                        <DataGrid x:Name="FirstTable" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                              ItemsSource = "{Binding FirstTableRows}" AutoGenerateColumns="False" SourceUpdated="FirstTable_OnSourceUpdated" 
                              CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" CanUserSortColumns="False" Margin="0,46,0,0.4">

                            <DataGrid.Columns>

                                <DataGridTextColumn Width="50"  Header="#" Binding= "{Binding Number, Mode=TwoWay}" IsReadOnly="True"/>

                                <DataGridTextColumn Width="700"  Header="Джерело появи ризиків" Binding= "{Binding Name, Mode=TwoWay}" IsReadOnly="True"/>

                                <DataGridTextColumn Width="386"  Header="Імовірність появи ризику" Binding= "{Binding Value, Mode=TwoWay, StringFormat=0.00, UpdateSourceTrigger=LostFocus, NotifyOnSourceUpdated=True}" />

                                <DataGridTextColumn Width="385"  Header="Загальний відсоток" Binding= "{Binding Percent, Mode=TwoWay, StringFormat= 0.00%}" IsReadOnly="True" />

                            </DataGrid.Columns>

                            <DataGrid.Resources>
                                <Style TargetType="{x:Type DataGridRow}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsHeader}" Value="True">
                                            <Setter Property="FontWeight" Value="Bold" />
                                            <Setter Property="IsEnabled" Value="False" />
                                            <Setter Property="FontSize" Value="14" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Resources>
                        </DataGrid>

                        <Label x:Name="label" Content="Визначення можливих джерел появи ризиків" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="298" Height="31"/>

                    </Grid>
                </TabItem>
                <TabItem Header="TabItem" Margin="-1.6,-10,-1.8,0">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                
                <TabItem Header="Аналіз ризиків розроблення ПЗ" Margin="-1.6,-10,-1.8,0">
                    <Grid VerticalAlignment="Stretch">
                        <Grid.Background>
                            <ImageBrush ImageSource="twilie.png"/>
                        </Grid.Background>
                        <Label  Content="Коефіцієнти вагомості кожного з експертів  для ймовірності настання ризикових подій" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="31"/>
                        
                        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding ExpertCoefs}">
                            <DataGrid.Columns>
                                <DataGridTextColumn   Header="#"                 Binding= "{Binding Number,                  Mode=TwoWay}"  IsReadOnly="True"/>
                                <DataGridTextColumn   Header="Множина ризиків"   Binding= "{Binding Name,                    Mode=TwoWay}"  IsReadOnly="True"/>
                                <DataGridTextColumn   Header="Кількість ризиків" Binding= "{Binding Value,                   Mode=TwoWay}"  IsReadOnly="True"/>
                                <DataGridTextColumn   Header="1"                 Binding= "{Binding ExpertCoefficients[0],   Mode=TwoWay}" />
                                <DataGridTextColumn   Header="2"                 Binding= "{Binding ExpertCoefficients[1],   Mode=TwoWay}" />
                                <DataGridTextColumn   Header="3"                 Binding= "{Binding ExpertCoefficients[2],   Mode=TwoWay}" />
                                <DataGridTextColumn   Header="4"                 Binding= "{Binding ExpertCoefficients[3],   Mode=TwoWay}" />
                                <DataGridTextColumn   Header="5"                 Binding= "{Binding ExpertCoefficients[4],   Mode=TwoWay}" />
                                <DataGridTextColumn   Header="6"                 Binding= "{Binding ExpertCoefficients[5],   Mode=TwoWay}" />
                                <DataGridTextColumn   Header="7"                 Binding= "{Binding ExpertCoefficients[6],   Mode=TwoWay}" />
                                <DataGridTextColumn   Header="8"                 Binding= "{Binding ExpertCoefficients[7],   Mode=TwoWay}" />
                                <DataGridTextColumn   Header="9"                 Binding= "{Binding ExpertCoefficients[8],   Mode=TwoWay}" />
                                <DataGridTextColumn   Header="10"                Binding= "{Binding ExpertCoefficients[9],   Mode=TwoWay}" />

                            </DataGrid.Columns>
                            </DataGrid>

                    </Grid>
                </TabItem>
            </TabControl>

        </Grid>

    </StackPanel>
</Window>
